body
	max-width 100%
	background-color #dcdcdc
.container
	padding 20px
	width calc(100% - 2 * padding)
.layout
	margin 0px
	width 300px
	margin auto
	max-width 100%
	padding-top 20px
.contentBox
	box-shadow 0px 0px 10px 5px rgba(175,175,175,0.5)
	border-radius 10px
	width 100%
	min-height 90vh
	background-color white
	header
		max-height 50px
		border-bottom 2px solid black
		position relative
		.logo
			max-width 240px
			img
				position relative
				bottom 30px
				width 100%
		.menu
			width 100%
			position absolute
			visibility hidden
			div
				display inline-block
				width 100%
				text-align center
				a
					font-size 0.8em
					text-decoration none
					text-transform uppercase
					color #838383
					padding-top 5px
					padding-bottom 6px
				a:hover
					color #f20102
				a.active-page
					border-bottom 4px solid red
					color black
		.visible
			visibility visible
			top 60px
.footer
	width 90%
	margin auto
	text-align center
	font-size 0.75em
.developer
	position relative
	left 10px
	top 30px
	margin-bottom 60px
	font-size 0.9em
	text-align right

@media only screen and (min-width 376px)
	.layout
		width 350px
		padding-top 30px
@media only screen and (min-width 480px)
	.layout
		width 480px
@media only screen and (min-width 750px)
	.layout
		width 700px
	.contentBox header 
		height 70px
		div
			display inline-block
			float left
		.menu
			visibility visible
			height 100%
			width calc(100% - 240px)
			a
				margin-right 10px
@media only screen and (min-width 1024px)
	.layout
		width 900px
	.contentBox header
		.logo
			max-width 312px
