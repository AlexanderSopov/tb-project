body
	max-width 100%
	background-color #dcdcdc
.container
	padding 20px
	width calc(100% - 2 * padding)
.layout
	margin 0px
	width 300px
	margin auto
	max-width 100%
	padding-top 20px
.contentBox
	box-shadow 0px 0px 10px 5px rgba(175,175,175,0.5)
	border-radius 10px
	width 100%
	min-height 90vh
	background-color white
	header
		height 50px
		border-bottom 2px solid black
		.logo
			max-width 240px
			position relative
			bottom 30px
			right 10px
			img
				width 100%
		.menu
			width 100%
			position relative
			visibility hidden
			bottom 60px
			a
				display block
				width 100%
				text-align center
				text-decoration none
				color black
				padding-top 5px
				padding-bottom 4px
		.visible
			visibility visible
			bottom 0px
.footer
	width 90%
	margin auto
	text-align center
	font-size 0.75em
.developer
	font-size 0.65em
	text-align right

@media only screen and (min-width 376px)
	.layout
		width 350px
		padding-top 30px
@media only screen and (min-width 480px)
	.layout
		width 480px
@media only screen and (min-width 750px)
	.layout
		width 700px
	.contentBox header 
		.menu
			visibility visible
			left 320px
			a
				display inline
				margin-right 10px
@media only screen and (min-width 1024px)
	.layout
		width 900px
