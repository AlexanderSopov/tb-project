body
	width 100vw
	margin 0px
	padding 0px
	background-color #dcdcdc
.container
	padding 10px 20px 20px 20px
	width calc(100% - 2 * padding)
.layout
	width 300px
	margin auto
	margin-top 20px
.contentBox
	box-shadow 0px 0px 10px 5px rgba(175,175,175,0.5)
	border-radius 10px
	width 100%
	min-height 70vh
	background-color white
.footer
	width 90%
	margin auto
.developer
	position relative
	left 10px
	top 30px
	margin-bottom 60px
	font-size 0.9em
	text-align right

.text
	margin 20px 0px
.img
	padding 20px 0px
	border-top 1px solid #cccccc
	img
		width 100%

@media only screen and (min-width 376px)
	.layout
		width 350px
		margin-top 50px
@media only screen and (min-width 480px)
	.layout
		width 480
		
