@media only screen and (min-width 1024px)
	.layout
		width 900px
	.container
		padding 20px 30px 30px 30px
		display flex
		flex-wrap wrap
	.contentBox header 
		border-bottom 3px solid black
		width 100%
		div
			display inline-block
			float left
		#hamburger
			display none
	.text
		padding-right 30px
		width calc(60% - 30px)
		margin 0px
	.img
		min-height 400px
		padding 0px
		margin-top 30px
		padding-left 30px
		width calc(40% - 32px)
		border-top none
		border-left 1px solid #ccc
		img
			max-height 600px

@media only screen and (min-width 1440px)
	.layout
		width 1024px