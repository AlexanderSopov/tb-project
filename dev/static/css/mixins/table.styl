div.regular-table
	overflow-x scroll
	table
		border-collapse collapse
		border-spacing 0
		width 100%
		margin auto
		tr:nth-child(even)
			background-color: #f2f2f2;
		th, td
			text-align left
			border 1px solid #ddd
			padding 8px	
		th
			background-color #d00
			color white
			padding 11px 8px	